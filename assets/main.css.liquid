@font-face {
    font-family: 'BebasNeueRegular';
    src: url('BebasNeue-webfont.eot');
    src: url('BebasNeue-webfont.eot?#iefix') format('embedded-opentype'),
         url('BebasNeue-webfont.woff') format('woff'),
         url('BebasNeue-webfont.ttf') format('truetype'),
         url('BebasNeue-webfont.svg#BebasNeueRegular') format('svg');
    font-weight: normal;
    font-style: normal;

}

/*text styles*/

h1 {
  font-size: 22px;
}

h2 {
  font-size: 20px;
}

h3 {
  font-size: 18px;
}

h4 {
  font-size: 16px;
}

h5 {
  font-size: 15px;
}

h6 {
  font-size: 12px;
}

p {
  font-size: 14px;
  line-height: 19px;
}

ul {
  font-size: 14px;
  line-height: 19px;
}

a {
  color: #333;
  text-decoration: underline;
}

a:hover {
  color: #a44316;
}

/*page header*/

.header {
  height: 40px;
  background-color: #313030;
  -moz-box-shadow: inset 0 0 15px #131313;
  -webkit-box-shadow: inset 0 0 15px #131313;
  box-shadow: inset 0 0 15px #131313;
}


/*upper navigation with search bar*/
#umbrella {
  position: relative;
}

#umbrella ul {
  margin: 0;
  padding: 0 10px 0 12px;
  position: absolute;
  top: 15px;
  right: 0px;
  list-style: none;
  font-size: 12px;
  font-weight: bold;
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px; 
  color: {{ settings.cart_link_colour }};
}
  
#umbrella li{
  float: left;
  padding: 6px 5px 0 0;
  margin: 0 5px 0 0;
  font-weight: normal;
  } 


#umbrella a {
  border: none;
  text-decoration: none;
  font-size: 13px;
  color: #666666;
  }

#umbrella a:hover {
  color: #a44316;
  text-decoration: none;
  font-size: 13px;
}  

#umbrella .contact {
  padding-top: 15px;
}

#umbrella .checkout-link {
  padding-top: 15px;
}

#umbrella .search-icon {
  padding-bottom: 10px;
}

input, textarea, select, .uneditable-input {
  width: 150px;
  height: 12px;
  background-color: #f6f5f5;
  -moz-box-shadow: inset 0 0 3px #d1d1d1;
  -webkit-box-shadow: inset 0 0 3px #d1d1d1;
  box-shadow: inset 0 0 3px #d1d1d1;
}

/** 
 * Search 
 */ 

#search-form{
  padding: 0 0 20px 0;
  overflow: hidden; height: 1%;
  }
#search-form #q{
  font-size: 16px;
  padding: 6px;
  width: 545px;
  border: solid 1px {{ settings.content_secondary_colour }};
  float: left;
  }
#search-form #search-submit{ /* overriding some of .btn's styles */
  padding-bottom: 6px; 
  float: right;
  width: 70px;
  height: 26px;
  }
.ie7 #search-form #search-submit{
  border: none;
  }

.results .item{
  margin: 0 0 20px 0;
  padding: 0 0 20px 0;
  border-bottom: solid 1px {{ settings.content_secondary_colour }}; 
  }
 



/*main navigation*/


.logo {
  padding: 25px 0 0 0;
}

.iwcnav { 
  list-style: none;
  margin: 0 0 165px;
}

.iwcnav a {
  color: #4e4e4e;
}

.iwcnav .dropdown {
  float: left;
  margin-left: 68px;
  margin-top: 126px;
}

.iwcnav .dropdown.first {
  margin-left: 30px;
}

.iwcnav .dropdown-toggle {
    font: 22px 'BebasNeueRegular', Arial, sans-serif;
    text-decoration: none;
}

.iwcnav .dropdown-toggle:hover {
  color: #a44316;
}

.dropdown-menu a {
  text-decoration: none;
}

.dropdown-menu li > a:hover,
.dropdown-menu .active > a,
.dropdown-menu .active > a:hover {
  color: #ffffff;
  text-decoration: none;
  background-color: #999;
}


/*homepage image gallery*/

  
.carousel {
  position: relative;
}

.carousel-control {
    position: absolute;
    top: 0;
    left: 0px;
    padding-top: 190px;
    width: 20px;
    height: 205px;
    margin-top: 0px;
    font-size: 60px;
    font-weight: 100;
    line-height: 30px;
    color: #b6b6b6;
    text-align: center;
    background: #b6b6b6;
    border: 0px solid #b6b6b6;
    -webkit-border-radius: 0px;
       -moz-border-radius: 0px;
            border-radius: 0px;
    opacity: 0.5;
    filter: alpha(opacity=50);
    display: none;
    color: #000;
    font: 26px Arial, sans-serif;
    text-decoration: none;
  }


.carousel-control.right {
    right: 0px;
    left: auto;
  }

.carousel-control:hover {
    color: #000;
    text-decoration: none;
    opacity: 0.5;
    filter: alpha(opacity=50);
    display: block;
  }
  
.carousel:hover .carousel-control {
  display: block;
}



/*sidebars*/

.sidebar-element h2 {
  font: 26px 'BebasNeueRegular', Arial, sans-serif;
  text-decoration: none;
  color: #4e4e4e;
}
.sidebar-element h2 a {
  font: 26px 'BebasNeueRegular', Arial, sans-serif;
  text-decoration: none;
  color: #4e4e4e;
}

.sidebar-element h2 a:hover {
  color: #a44316;
}

.sidebar-element h4 {
  margin: 20px 0 10px 0;
}

.sidebar {
  padding: 15px 20px 0 0px;
}

.main .sidebar {
  padding: 5px 20px 0 0px;
}


#sm-icons li { 
  margin: 0 10px 0 0; 
  padding: 0;
  float: left;
  }
  
#sm-icons {
  margin: 0 30px 0 0;
} 

#sm-icons a{ 
  width: 36px;
  height: 37px;
  background-image: url({{ 'social-media.png' | asset_url }});
  display: block;
  }

{% if settings.sm_colour == 'white' %}
#sm-youtube a{ background-position: 0 0; }
#sm-flickr a{ background-position:-36px 0; }
#sm-twitter a{ background-position: -72px 0; }
#sm-facebook a{ background-position: -108px 0; }
