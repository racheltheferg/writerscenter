<div id="col-main" class="{{ collection.handle }} interior-content">

  
<div id="page-header">
   <h1 class="section-title">{{ collection.title | escape }}</h1>
   {% if collection.description != empty %}
     <div class="description content">{{ collection.description }}</div>
   {% endif %}
</div>        
 
<div class="product-excerpt">
   <h4>{{ product.title | link_to: product.url }}</h4>
    {{ product.content | strip_html | truncatewords: 40 }}
         </div>
         
         </div> <!-- end .product -->
        
 
 
  
 
</div> <!-- /#col-main -->