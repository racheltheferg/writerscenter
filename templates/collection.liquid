<div id="col-main" class="{{ collection.handle }} interior-content">

      <h1 class="collection-title">{{ collection.title | escape }}{% if current_tags %}: {{ current_tags | join:", " | capitalize }}
        {% endif %}</h1>
      {% if collection.description != empty %}
        <div class="description content">{{ collection.description }}</div>
      {% endif %}

    {% paginate collection.products by 10 %}
      {% if collection.products.size > 0 %}
    
        <ul class="product-grid clearfix">
        {% for product in collection.products %}
          <li{% cycle '', '', '', ' class="last-in-row"' %}>
            {% include 'product-grid-item' %}
          </li>
        {% endfor %}
        </ul>

        {% include 'pagination' %}
      
      {% else %}    
        <strong>Sorry, there are no classes matching that description, but check back later! We're adding new classes and workshops all the time</strong>
      {% endif %}
    {% endpaginate %}
  </section>
  
</div> <!-- /#col-main -->