<div id="col-main" class="{{ collection.handle }} interior-content">

  
  
  
  <section class="diagonal-divider clearfix">
    <header class="section-details clearfix">
      <h1 class="section-title">{{ collection.title | escape }}</h1>
      {% if collection.description != empty %}
        <div class="description content">{{ collection.description }}</div>
      {% endif %}
    </header>

    {% paginate collection.products by 12 %}
      {% if collection.products.size > 0 %}
    
      <div class="collection-excerpt">
        <h4>{{ product.title | link_to: product.url }}</h4>
        {{ product.description | strip_html | truncatewords: 40 }}
      </div>
      
      
        <ul class="product-grid clearfix">
        {% for product in collection.products %}
          <li{% cycle '', '', '', ' class="last-in-row"' %}>
            {% include 'product-grid-item' %}
          </li>
        {% endfor %}
        </ul>

        {% include 'pagination' %}
      
      {% else %}    
        <strong>No products found in this collection.</strong>
      {% endif %}
    {% endpaginate %}
  </section>
  
</div> <!-- /#col-main -->