    {{ 'jquery.js' | asset_url | script_tag }}
    {{ 'bootstrap-dropdown.js' | asset_url | script_tag }}
    {{ 'bootstrap-transition.js' | asset_url | script_tag }}
    {{ 'bootstrap-carousel.js' | asset_url | script_tag }}
    {{ 'main.js' | asset_url | script_tag }}
    
  

</body></html>